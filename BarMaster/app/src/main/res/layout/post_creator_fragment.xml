<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.comunidad.creaPost.PostCreator">

    <TextView
        android:id="@+id/text_postcreator"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:text="New Post"
        android:textAlignment="center"
        android:textColor="@color/colorLetras"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <LinearLayout
            android:background="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foto_postcreator"
                android:layout_width="350dp"
                android:layout_height="262.5dp"
                android:src="@drawable/def_postimg">
            </ImageView>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Routine Name: "
                    android:textColor="@color/colorLetras"></TextView>
                <EditText
                    android:singleLine="true"
                    android:id="@+id/routinename_postcreator"
                    android:layout_marginLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="27dp"
                    android:background="@color/colorLetras"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durtaion mins:"
                    android:textColor="@color/colorLetras"></TextView>
                <EditText
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:id="@+id/duracion_postcreator"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="56dp"
                    android:layout_height="27dp"
                    android:textSize="18sp"
                    android:background="@color/colorLetras"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <TextView
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensaciones:"
                    android:textColor="@color/colorLetras"></TextView>
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/comment_postcreator"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLength="60"
                    android:background="@color/colorLetras"></EditText>
            </LinearLayout>
    </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        app:borderWidth="0dp"
        app:backgroundTint="@color/colorLetras"
        app:fabSize="normal"
        android:backgroundTint="@color/Black"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/goback_post"></com.google.android.material.floatingactionbutton.FloatingActionButton>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginRight="15dp"
        android:layout_marginBottom="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        android:layout_gravity="right|bottom"
        android:backgroundTint="@color/Black"
        android:src="@drawable/ic_send_black_24dp"
        android:id="@+id/fbotadd_post"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</FrameLayout>