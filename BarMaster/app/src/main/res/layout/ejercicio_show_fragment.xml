<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ejercicioshow.EjercicioShow">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/texthome"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="15dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorLetras"
            android:textSize="40sp" />

        <androidx.cardview.widget.CardView
            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000000">

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/foto_eje"
                        android:layout_width="350dp"
                        android:layout_height="262.5dp"
                        android:src="@drawable/pruebados"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="18sp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/colorLetras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NombreEjercicio"
                        android:id="@+id/nombre_rutina_eje"></TextView>

                    <TextView
                        android:layout_marginTop="14dp"
                        android:layout_gravity="bottom"
                        android:textSize="18sp"
                        android:textColor="@color/colorLetras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:id="@+id/nivel_tra_eje"></TextView>

                    <TextView
                        android:layout_marginTop="14dp"
                        android:textSize="18sp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/colorLetras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seccion Muscular"
                        android:id="@+id/muscle_eje"></TextView>

                    <TextView
                        android:layout_marginTop="14dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Aqui su descripcion maximo 120 caracteres"
                        android:textColor="@color/colorLetras"
                        android:id="@+id/descrip_eje"></TextView>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginRight="15dp"
        android:layout_marginBottom="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        app:borderWidth="1dp"
        app:backgroundTint="@color/colorLetras"
        app:fabSize="mini"
        android:backgroundTint="@color/Black"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/goback_eje"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</FrameLayout>